        <!--<p>Or connect with:</p>-->
        <!--<p>-->
            <!--<a class="facebook" href=""></a>-->
            <!--<a class="twitter" href=""></a>-->
        <!--</p>-->
    <!--</div>-->
    <!------->
    <div class="mod-footer" style="height:40px;">
        <div ng-cloak ng-show="error" class="alert alert-danger" role="alert">
            {{error}}
        </div>
        <div ng-show="success" id="successbox" ng-cloak class="alert alert-success" role="alert">
            {{success}}
        </div>
    </div>
</div>

