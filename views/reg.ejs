<% include indexTemplate%>
<!--注册-->
<link rel="stylesheet" href="assets/css/reset.css">
<link rel="stylesheet" href="assets/css/supersized.css">
<link rel="stylesheet" href="assets/css/style.css">
<script src="assets/js/jquery-1.8.2.min.js"></script>
<script src="assets/js/supersized.3.2.7.min.js"></script>
<script src="assets/js/supersized-init.js"></script>
<script src="assets/js/scripts.js"></script>

<div class="page-container" ng-app="registerApp" ng-controller="registerController">

    <div class="mod-head">
        <h1>注册新用户</h1>
    </div>
    <div class="mod-body">
        <form name="regForm" class="aw-register-form" ng-submit="postForm()">
            <input type="text" name="name" class="username" placeholder="用户名" ng-model="formData.name" ng-minlength="5"
                   ng-maxlength="12" ng-pattern="/^[a-zA-Z][a-zA-Z0-9_]{4,11}$/" required>
            <div style="height: 20px;">
                <br>
                <span ng-cloak ng-show="regForm.name.$invalid && !regForm.name.$pristine"
                      class="aw-reg-tips aw-reg-err text-danger">

                        用户名长度不符合
         </span>
            </div>
            <input type="email" name="email" class="email" placeholder="邮箱"
                   ng-pattern="/^(\w)+(\.\w+)*@(\w)+((\.\w+)+)$/" ng-model="formData.email" required>
            <div style="height: 20px;">
                <br>
                <span ng-cloak ng-show="regForm.email.$invalid && !regForm.email.$pristine"
                      class="aw-reg-tips aw-reg-err text-danger">邮箱格式不正确</span>
            </div>
            <input type="password" name="password" class="password" placeholder="密码"
                   ng-pattern="/(?!^\\d+$)(?!^[a-zA-Z]+$)(?!^[_#@]+$).{5,}/" ng-maxlength="12"
                   ng-model="formData.password" required>
            <div style="height: 20px;">
                <br>
                <span ng-cloak ng-show="regForm.password.$invalid && !regForm.password.$pristine"
                      class="aw-reg-tips aw-reg-err text-danger">
                        密码格式不正确
                    </span>
            </div>

            <input type="submit" value="注册" ng-disabled="regForm.$invalid"></input>
            <div class="error"><span>+</span></div>

        </form>
    </div>
