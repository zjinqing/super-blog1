<% include indexTemplate%>

<link rel="stylesheet" href="assets/css/supersized.css">
<link rel="stylesheet" href="assets/css/style.css">
<script src="assets/js/jquery-1.8.2.min.js"></script>
<script src="assets/js/supersized.3.2.7.min.js"></script>
<script src="assets/js/supersized-init.js"></script>
<script src="assets/js/scripts.js"></script>

<div class="page-container" ng-app="loginApp" ng-controller="loginController">
    <h1>登陆</h1>
    <form name="loginForm" method="post" ng-submit="postForm()">

        <input type="text" name="username" class="username" placeholder="邮箱 / 用户名" ng-model="formData.username"ng-pattern="/(^[a-zA-Z][a-zA-Z0-9_]{4,11}$)|(^(\w)+(\.\w+)*@(\w)+((\.\w+)+)$)/" required >
        <div style="height: 20px;">
            <br>
            <span ng-cloak ng-show="loginForm.username.$invalid && !loginForm.username.$pristine" class="text-danger">前端表单验证的输出结果</span>
        </div>
        <!--------------->
        <input type="password" name="password" class="password" placeholder="密码" ng-model="formData.password" ng-pattern="/(?!^\\d+$)(?!^[a-zA-Z]+$)(?!^[_#@]+$).{5,}/" ng-maxlength="12" required>
        <div style="height: 20px;">
            <br>
            <span ng-cloak class="text-danger" ng-show="loginForm.password.$invalid && !loginForm.password.$pristine">前端表单验证的输出结果</span>
        </div>
        <!---------->
        <input type="submit" ng-disabled="loginForm.$invalid" value="登陆"></input>
        <div class="error"><span>+</span></div>
    </form>
    <!--<div class="connect">-->
        <!--<p>Or connect with:</p>-->
        <!--<p>-->
            <!--<a class="facebook" href=""></a>-->
            <!--<a class="twitter" href=""></a>-->
        <!--</p>-->
    <!--</div>-->
    <!-------->
    <div class="mod-footer" style="height:40px;">
        <div ng-cloak ng-show="error" class="alert alert-danger" role="alert">
            {{error}}
        </div>
        <div ng-show="success" id="successbox" ng-cloak class="alert alert-success" role="alert">
            {{success}}
        </div>
    </div>
</div>

